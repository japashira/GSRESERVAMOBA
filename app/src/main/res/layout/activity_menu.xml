<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnInserirDados"
        android:layout_width="374dp"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:text="Inserir Dados"
        app:layout_constraintBottom_toTopOf="@+id/btnHistorico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnHistorico"
        android:layout_width="375dp"
        android:layout_height="47dp"
        android:layout_marginBottom="20dp"
        android:text="HistÃ³rico"
        app:layout_constraintBottom_toTopOf="@+id/btnEditarDados"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnEditarDados"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="160dp"
        android:text="Editar Dados"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="342dp"
        android:layout_height="71dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="259dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="126dp"
        android:text="                 Bem Vindo ao APP Energia Rural"
        app:layout_constraintBottom_toTopOf="@+id/btnInserirDados"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="209dp"
        android:layout_height="181dp"
        android:layout_marginTop="40dp"
        android:contentDescription="Logo"
        android:src="@drawable/ic_logo"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.078" />

</androidx.constraintlayout.widget.ConstraintLayout>
